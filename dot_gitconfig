[push]
  default = simple
	autoSetupRemote = true
[pull]
  rebase = false
[fetch]
  prune = true
[github]
  user = wasabeef
[alias]
  ba = branch -a
  bd = "!bd() { \
         git branch | awk '{ if ($1 != \"*\") print $1; }' | xargs git branch -D; \
        }; bd"
  bm = branch -m
  ch = checkout
	c = !gcop commit
  ca = commit --amend
  cl = clean
  clf = clean -f
  f = fetch --all
  sw = switch
  stu = stash -u
  stp = stash pop
  pu = push
	pf = push --force
  pl = pull
  l = log --oneline --reverse
  pr = "!pr() { \
         git fetch origin pull/$1/head:$2; \
       }; pr"
	p = push
	undo = reset --soft HEAD^
	gcommit = !gcop commit
	ac = !git add . && gcop commit
	acp = !git add . && gcop commit && git push
	cp = !gcop commit && git push
	info = !gcop info
	gconfig = !gcop config
	ghelp = !gcop help
	amend = commit --amend
  set = branch --set-upstream-to
[diff "lockb"]
	textconv = bun
	binary = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[init]
	defaultBranch = main

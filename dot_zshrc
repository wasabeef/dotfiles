# zsh
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

# Proile
# zmodload zsh/zprof && zprof

## Save command history
export HISTFILE="$HOME/.zsh_history"
export HISTSIZE=10000
export HISTFILESIZE=10000
export SAVEHIST=10000
setopt BANG_HIST              # Treat the '!' character specially during expansion.
setopt EXTENDED_HISTORY       # Write the history file in the ":start:elapsed;command" format.
setopt INC_APPEND_HISTORY     # Write to the history file immediately, not when the shell exits.
setopt SHARE_HISTORY          # Share history between all sessions.
setopt HIST_EXPIRE_DUPS_FIRST # Expire duplicate entries first when trimming history.
setopt HIST_IGNORE_DUPS       # Don't record an entry that was just recorded again.
setopt HIST_IGNORE_ALL_DUPS   # Delete old recorded entry if new entry is a duplicate.
setopt HIST_FIND_NO_DUPS      # Do not display a line previously found.
setopt HIST_IGNORE_SPACE      # Don't record an entry starting with a space.
setopt HIST_SAVE_NO_DUPS      # Don't write duplicate entries in the history file.
setopt HIST_REDUCE_BLANKS     # Remove superfluous blanks before recording entry.
setopt HIST_VERIFY            # Don't execute immediately upon history expansion.
setopt HIST_BEEP              # Beep when accessing nonexistent history.
setopt AUTO_CD

# Exports
export EDITOR='nvim'
export VISUAL='nvim'
export PAGER='less'

# vim
export XDG_CONFIG_HOME="$HOME/.config"

# OSåˆ¥
case $(uname | tr '[:upper:]' '[:lower:]') in
linux*)
  # HomeBrew
  export HOMEBREW="/home/linuxbrew/.linuxbrew/"
  export HOMEBREW_REPOSITORY=$HOMEBREW
  export HOMEBREW_CELLAR="$HOMEBREW/Cellar"
  export PATH="$HOMEBREW/bin:$HOMEBREW/sbin${PATH+:$PATH}"
  export MANPATH="$HOMEBREW/share/man${MANPATH+:$MANPATH}:"
  export INFOPATH="$HOMEBREW/share/info:${INFOPATH:-}"

  # asdf
  . $HOME/.asdf/asdf.sh
  . ~/.asdf/plugins/java/set-java-home.zsh

  ;;
darwin*)
  # HomeBrew
  # eval "$(/opt/homebrew/bin/brew shellenv)"
  export HOMEBREW="/opt/homebrew"
  export HOMEBREW_REPOSITORY=$HOMEBREW
  export HOMEBREW_CELLAR="$HOMEBREW/Cellar"
  export PATH="$HOMEBREW/bin:$HOMEBREW/sbin${PATH+:$PATH}"
  export MANPATH="$HOMEBREW/share/man${MANPATH+:$MANPATH}:"
  export INFOPATH="$HOMEBREW/share/info:${INFOPATH:-}"

  # asdf
  . $HOMEBREW/opt/asdf/libexec/asdf.sh
  # . ~/.asdf/plugins/java/set-java-home.zsh
  # eval "$(mise activate zsh)"
  export JAVA_HOME=$(/usr/libexec/java_home)
  export JDK_HOME=${JAVA_HOME}

  ## Clang/LLVM
  # export LLVM_PATH="$(brew --prefix llvm)"
  # export LLVM_PATH="/opt/homebrew/opt/llvm"
  # export PATH="$LLVM_PATH/bin:${PATH}"

  # export LDFLAGS="-L$LLVM_PATH/lib"
  # export CPPFLAGS="-I$LLVM_PATH/include"

  ;;
*) ;;
esac

## Android
export ANDROID_HOME="$HOME/Android/sdk"
export ANDROID_SDK_ROOT="$HOME/Android/sdk"
export PATH=$ANDROID_HOME/platform-tools:$PATH
export PATH=$ANDROID_HOME/tools:$PATH
export PATH=$ANDROID_HOME/tools/bin:$PATH
export PATH=$ANDROID_HOME/emulator:$PATH
export PATH=$ANDROID_HOME/cmdline-tools/latest/bin:$PATH

## Flutter
export FLUTTER_ROOT="$(asdf where flutter)"
export PATH="$PATH":"$HOME/.pub-cache/bin"
export GEM_HOME=$HOME/.gem
export PATH=$GEM_HOME/bin:$PATH

## Fastlane
# export PATH=$HOME/.fastlane/bin:$PATH

## Rust
# export PATH=$HOME/.cargo/bin:$PATH

## Go
export ASDF_GOLANG_MOD_VERSION_ENABLED=true
export GOPATH=$HOME/.go
export GOROOT=$(go env GOROOT)
export GOBIN=$GOROOT/bin
export PATH=$GOBIN:$PATH

# Bun
# [ -s "$HOME/.bun/_bun" ] && source "$HOME/.bun/_bun"

## Maestro
export PATH="$PATH":"$HOME/.maestro/bin"

## Aliases
alias v='nvim'
alias vi='nvim'
alias vim='nvim'
alias neovim='nvim'
alias p='pwd'
alias g='git'
alias gi='git'
alias c="clear"
alias ls='lsd'
alias l='lsd'
alias ll='lsd -lrta'
alias m='melos'
alias mbs='melos bootstrap'
alias mgt='melos get'
alias mgn='melos get'
alias mget='melos get'
alias mgen='melos gen'
alias mr='melos refresh'
alias .="cd .."
alias ..="cd ../.."
alias ...="cd ../../.."
alias ....="cd ../../../.."
alias .....="cd ../../../../.."
alias reload='exec -l $SHELL;source ~/.zshrc'
alias emu='emulator @$(emulator -list-avds | peco)'
alias emu-ls='avdmanager list avd'
alias simu='open -a Simulator'
alias simu-ls='xcrun simctl list'
alias chez='chezmoi'

# Zsh Plugin Manager
if [[ -x $(which sheldon) ]]; then
  eval "$(sheldon source)"
fi

# fzf
source <(fzf --zsh)

